{
  "name": "mediawiki-mcp",
  "version": "0.1.0",
  "description": "A Model Context Protocol server for reading and writing MediaWiki pages with full API integration",
  "private": true,
  "type": "module",
  "bin": {
    " mediawiki-mcp": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "start": "node build/index.js",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.6.0",
    "dotenv": "^17.2.1",
    "nodemw": "^0.18.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.15.0",
    "@types/node": "^20.11.24",
    "typescript": "^5.3.3"
  }
}
